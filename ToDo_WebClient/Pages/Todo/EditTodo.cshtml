@page "{TodoId:int}"
@model ToDo_WebClient.Pages.Todo.EditTodoModel
@{
}

<div class="container">
    <h3 class="text-center">You are about to edit: <b>@Model.Todoitem.Name</b></h3>
    <div class="row">
        <div class="col-md-3"></div>
        <form method="post" class="card border col-md-6 form-bg-color">
            <input type="hidden" asp-for="@Model.Todoitem.ID" />
            <div class="row">
                <div>
                    <div class="input-group mt-4">
                        <div class="input-group-prepend col-md-3">
                            <span class="input-group-text">Name: </span>
                        </div>
                        <input type="text" asp-for="@Model.Todoitem.Name" class="form-control col-md-9" placeholder="@Model.Todoitem.Name" />
                        <br />
                        <span class="text-danger" asp-validation-for="@Model.Todoitem.Name"></span>
                    </div>
                </div>
                <div>
                    <div class="input-group mt-4">
                        <div class="input-group-prepend col-md-3">
                            <span class="input-group-text">Description: </span>
                        </div>
                        <input type="text" asp-for="@Model.Todoitem.Description" class="form-control col-md-9" placeholder="@Model.Todoitem.Description" />
                        <br />
                        <span class="text-danger" asp-validation-for="@Model.Todoitem.Description"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div>
                    <div class="mb-3">
                        <div class="input-group">
                            <div class="input-group-prepend col-md-3">
                                <span class="input-group-text">Choose priority: </span>
                            </div>
                            <select asp-for="@Model.Todoitem.Priority" id="Priority" class="form-control">
                                <option value="0">High</option>
                                <option value="1">Normal</option>
                                <option value="2">Low</option>
                            </select>
                            <br />
                            <span class="text-danger" asp-validation-for="@Model.Todoitem.Priority"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <div class="input-group">
                        <div class="input-group-prepend col-md-9">
                            <span class="input-group-text">Completed: </span>
                        </div>
                        <div class="form-control col-md-3">
                            <input type="checkbox" asp-for="@Model.Todoitem.Completed" class="form-check-input ms-3" />
                        </div>
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="input-group">
                        <div class="input-group-prepend col-md-4">
                            <span class="input-group-text">Created: </span>
                        </div>
                        <input type="text" asp-for="@Model.Todoitem.CreatedTime" readonly class="form-control col-md-8" placeholder="@Model.Todoitem.CreatedTime" />
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <hr />
            </div>
            <div class="row mb-3">
                <div class="d-flex flex-row justify-content-center">
                    <div class="me-4">
                        <a class="btn btn-warning" asp-page="/Todo/ToDoItems">Return</a>
                    </div>
                    <div class="ms-4">
                        <button type="submit" name="editTodo" class="btn btn-success" value="true">Edit</button>
                    </div>
                    <div class="ms-4">
                        <button type="submit" class="btn btn-danger" value="true" name="deleteTodo" onclick="return confirm('Are you sure you want to delete this To-do item?')">Delete</button>
                    </div>                    
                </div>
            </div>
        </form>
    </div>
</div>